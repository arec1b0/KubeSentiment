# Local Development Configuration
# Copy to .env and edit as needed

# Profile
MLOPS_PROFILE=local

# Server
MLOPS_APP_NAME=KubeSentiment
MLOPS_APP_VERSION=1.0.0
MLOPS_DEBUG=true
MLOPS_HOST=127.0.0.1
MLOPS_PORT=8000
MLOPS_WORKERS=1

# Model
MLOPS_MODEL_NAME=distilbert-base-uncased-finetuned-sst-2-english
MLOPS_MODEL_BACKEND=pytorch
MLOPS_MAX_TEXT_LENGTH=512
MLOPS_PREDICTION_CACHE_MAX_SIZE=100

# Security
MLOPS_API_KEY=
MLOPS_ALLOWED_ORIGINS=*

# Monitoring
MLOPS_LOG_LEVEL=INFO
MLOPS_ENABLE_METRICS=false
MLOPS_ENABLE_TRACING=false

# External services (disabled by default for local)
MLOPS_REDIS_ENABLED=false
MLOPS_KAFKA_ENABLED=false
MLOPS_VAULT_ENABLED=false
MLOPS_DATA_LAKE_ENABLED=false
MLOPS_MLFLOW_ENABLED=false
