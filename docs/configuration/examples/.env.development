# Development Configuration with Services
# Copy to .env and edit as needed

# Profile
MLOPS_PROFILE=development

# Server
MLOPS_APP_NAME=KubeSentiment
MLOPS_APP_VERSION=1.0.0
MLOPS_DEBUG=true
MLOPS_HOST=0.0.0.0
MLOPS_PORT=8000
MLOPS_WORKERS=1

# Model
MLOPS_MODEL_NAME=distilbert-base-uncased-finetuned-sst-2-english
MLOPS_MODEL_BACKEND=pytorch
MLOPS_MAX_TEXT_LENGTH=512
MLOPS_PREDICTION_CACHE_MAX_SIZE=100

# Security
MLOPS_API_KEY=
MLOPS_ALLOWED_ORIGINS=*

# Monitoring
MLOPS_LOG_LEVEL=DEBUG
MLOPS_ENABLE_METRICS=true
MLOPS_ENABLE_TRACING=false

# Redis (optional - enable if needed)
MLOPS_REDIS_ENABLED=false
# MLOPS_REDIS_HOST=localhost
# MLOPS_REDIS_PORT=6379
# MLOPS_REDIS_MAX_CONNECTIONS=50

# Kafka (optional - enable if needed)
MLOPS_KAFKA_ENABLED=false
# MLOPS_KAFKA_BOOTSTRAP_SERVERS=localhost:9092
# MLOPS_KAFKA_CONSUMER_GROUP=mlops-sentiment-dev
# MLOPS_KAFKA_TOPIC=sentiment-requests

# Vault (disabled by default in dev)
MLOPS_VAULT_ENABLED=false

# Data Lake (disabled by default in dev)
MLOPS_DATA_LAKE_ENABLED=false

# MLOps features (disabled for faster startup in dev)
MLOPS_MLFLOW_ENABLED=false
MLOPS_DRIFT_DETECTION_ENABLED=false
MLOPS_EXPLAINABILITY_ENABLED=false
