# MLOps Sentiment Analysis Service Configuration
# Copy this file to .env and customize the values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application name and version
MLOPS_APP_NAME="ML Model Serving API"
MLOPS_APP_VERSION="1.0.0"

# Debug mode (true for development, false for production)
MLOPS_DEBUG=true

# =============================================================================
# SERVER SETTINGS
# =============================================================================

# Server host and port
MLOPS_HOST=0.0.0.0
MLOPS_PORT=8000

# Number of worker processes (1 for development, adjust for production)
MLOPS_WORKERS=1

# =============================================================================
# MODEL SETTINGS
# =============================================================================

# Hugging Face model identifier
MLOPS_MODEL_NAME=distilbert-base-uncased-finetuned-sst-2-english

# Directory to cache downloaded models (optional)
MLOPS_MODEL_CACHE_DIR=./models

# Maximum input text length in characters
MLOPS_MAX_TEXT_LENGTH=512

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Maximum request timeout in seconds
MLOPS_MAX_REQUEST_TIMEOUT=30

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Enable metrics collection endpoint
MLOPS_ENABLE_METRICS=true

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
MLOPS_LOG_LEVEL=INFO

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# CORS allowed origins (comma-separated list or * for all)
MLOPS_CORS_ORIGINS=*

# API key for authentication (optional)
# MLOPS_API_KEY=your-secret-api-key-here

# Allowed origins for CORS (comma-separated list)
# MLOPS_ALLOWED_ORIGINS=https://example.com,https://another-example.com

# =============================================================================
# HUGGING FACE SETTINGS (OPTIONAL)
# =============================================================================

# Hugging Face API token for private models (optional)
# HUGGINGFACE_TOKEN=your-hf-token-here

# =============================================================================
# DATABASE SETTINGS (IF APPLICABLE)
# =============================================================================

# Database connection URL (if using database for logging/analytics)
# DATABASE_URL=postgresql://user:password@localhost:5432/mlops_db

# =============================================================================
# MONITORING INTEGRATIONS
# =============================================================================

# Prometheus metrics endpoint configuration
# PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc_dir

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# DEPLOYMENT ENVIRONMENT
# =============================================================================

# Environment name (development, staging, production)
ENVIRONMENT=development

# Application instance ID (useful for distributed deployments)
# INSTANCE_ID=instance-001

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable experimental features
# ENABLE_EXPERIMENTAL_FEATURES=false

# Enable batch processing endpoint
# ENABLE_BATCH_PROCESSING=false

# Enable model versioning endpoint
# ENABLE_MODEL_VERSIONING=false

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Redis URL for caching (optional)
# REDIS_URL=redis://localhost:6379/0

# Message queue URL for async processing (optional)
# MESSAGE_QUEUE_URL=amqp://guest:guest@localhost:5672/

# =============================================================================
# RESOURCE LIMITS
# =============================================================================

# Maximum concurrent requests per instance
# MAX_CONCURRENT_REQUESTS=100

# Request rate limit per minute per IP
# RATE_LIMIT_PER_MINUTE=60

# Maximum request payload size in MB
# MAX_PAYLOAD_SIZE_MB=10

# =============================================================================
# NOTES
# =============================================================================

# 1. For production deployment:
#    - Set MLOPS_DEBUG=false
#    - Configure proper CORS origins
#    - Set strong API keys
#    - Configure proper logging levels
#    - Set appropriate resource limits

# 2. For development:
#    - Keep MLOPS_DEBUG=true for auto-reload and detailed logs
#    - Use * for CORS origins for easier testing
#    - Set LOG_LEVEL=DEBUG for verbose logging

# 3. For staging:
#    - Set MLOPS_DEBUG=false
#    - Use production-like settings but with more verbose logging
#    - Test with realistic data volumes

# 4. Security considerations:
#    - Never commit this file with real secrets to version control
#    - Use environment-specific secret management in production
#    - Rotate API keys regularly
#    - Monitor access logs for unusual activity

# 5. Performance tuning:
#    - Adjust MLOPS_WORKERS based on CPU cores (typically CPU_CORES * 2 + 1)
#    - Monitor memory usage and adjust accordingly
#    - Configure appropriate timeouts for your use case
#    - Use caching for frequently requested predictions